                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                      <RowConstraints vgrow="SOMETIMES" />
                      <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Comet Name:" />
                        <TextField fx:id="tfCometName" promptText="short comet designation" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" />
