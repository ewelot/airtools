                              <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text=" - " HBox.hgrow="ALWAYS" />
                              <DatePicker fx:id="dpEnd" onAction="#onDpEnd" prefWidth="160.0" promptText="dd.mm.yyyy" HBox.hgrow="SOMETIMES" />
                           </children>
                        </HBox>
